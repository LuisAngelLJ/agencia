extends ./layout/index
block contenido
    main(class="container nt-5")
        h1(class="text-center mt-5") #{pagina}
            blockquote(class="text-center") Lee sobre nuestros clientes y sus experiencias
            include ./layout/bloque_testimoniales
            div(class="row")
                div(class="col-md-12")
                    h2(class="d-block w-100 text-center") Agrega un testimonial
                    if(errores)
                        each error in errores
                            div(class="alert col alert-danger text-center")= error.mensaje
                div(class="row col justify-content-center")
                    div(class="col-md-8")
                        form(action="/testimoniales" method="POST")
                            div(class="form-group")
                                label(for="nombre") Nombre
                                input#nombre(type="text", placeholder="Tu Nombre", name="nombre",class="form-control", value= nombre)
                            div(class="form-group")
                                label(for="correo") Correo Electronico
                                input#correo(type="text", placeholder="Tu Correo", name="correo",class="form-control", value= correo)
                            div(class="form-group")
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", cols="3", rows="3", class="form-control", placeholder="Escribe tu mensaje")= mensaje
                            input(type="submit", class="btn btn-success btn-block")